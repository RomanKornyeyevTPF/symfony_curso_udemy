{% extends 'base.html.twig' %}

{% block title %}Doctrine{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('doctrine_inicio') }}">Doctrine</a></li>
            <li class="breadcrumb-item active" aria-current="page">Categor√≠as</li>
        </ol>
